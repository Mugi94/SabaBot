{
  "version": 1,
  "disable_existing_loggers": true,
  "formatters": {
    "simple": {
      "format": "%(levelname)s %(message)s"
    },

    "detailed": {
      "format": "%(asctime)s %(levelname)s [%(name)s]: %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "WARNING",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    },

    "file": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs/saba.log"
    }
  },

  "root": {
    "level": "DEBUG",
    "handlers": [
      "stderr",
      "file"
    ]
  }
}